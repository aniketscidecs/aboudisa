<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Container list View -->
        <record id="view_freight_container_list" model="ir.ui.view">
            <field name="name">freight.container.list</field>
            <field name="model">freight.container</field>
            <field name="arch" type="xml">
                <list string="Containers/Packages" default_order="name">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="is_container" widget="boolean_toggle"/>
                    <field name="container_type"/>
                    <field name="refrigerated" widget="boolean_toggle"/>
                    <field name="size"/>
                    <field name="volume"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- Container Form View -->
        <record id="view_freight_container_form" model="ir.ui.view">
            <field name="name">freight.container.form</field>
            <field name="model">freight.container</field>
            <field name="arch" type="xml">
                <form string="Container/Package">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Container/Package Name"/>
                            </h1>
                            <h2>
                                <field name="code" placeholder="Code"/>
                            </h2>
                        </div>
                        <group>
                            <group name="basic_info" string="Basic Information">
                                <field name="is_container"/>
                                <field name="container_type"/>
                                <field name="refrigerated"/>
                                <field name="iso_code" invisible="is_container == False"/>
                            </group>
                            <group name="capacity" string="Capacity">
                                <field name="size" invisible="is_container == False"/>
                                <field name="volume"/>
                                <field name="max_weight"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Dimensions" name="dimensions">
                                <group>
                                    <group name="internal_dimensions" string="Internal Dimensions (m)">
                                        <field name="length"/>
                                        <field name="width"/>
                                        <field name="height"/>
                                    </group>
                                    <group name="external_dimensions" string="External Dimensions (m)">
                                        <field name="external_length"/>
                                        <field name="external_width"/>
                                        <field name="external_height"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Transport Compatibility" name="transport">
                                <group>
                                    <group name="transport_modes" string="Compatible Transport Modes">
                                        <field name="ocean_compatible"/>
                                        <field name="air_compatible"/>
                                        <field name="land_compatible"/>
                                    </group>
                                    <group name="special_features" string="Special Features">
                                        <field name="hazmat_approved"/>
                                        <field name="food_grade"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Pricing" name="pricing">
                                <group>
                                    <group name="rates" string="Rates">
                                        <field name="daily_rate"/>
                                        <field name="currency_id" options="{'no_create': True}"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="notes" placeholder="Additional information about the container/package..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Container Search View -->
        <record id="view_freight_container_search" model="ir.ui.view">
            <field name="name">freight.container.search</field>
            <field name="model">freight.container</field>
            <field name="arch" type="xml">
                <search string="Search Containers/Packages">
                    <field name="name" string="Container/Package" filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                    <field name="container_type"/>
                    <field name="size"/>
                    <separator/>
                    <filter string="Containers" name="containers" domain="[('is_container', '=', True)]"/>
                    <filter string="Packages" name="packages" domain="[('is_container', '=', False)]"/>
                    <separator/>
                    <filter string="Refrigerated" name="refrigerated" domain="[('refrigerated', '=', True)]"/>
                    <filter string="Dry" name="dry" domain="[('refrigerated', '=', False)]"/>
                    <separator/>
                    <filter string="Ocean Compatible" name="ocean_compatible" domain="[('ocean_compatible', '=', True)]"/>
                    <filter string="Air Compatible" name="air_compatible" domain="[('air_compatible', '=', True)]"/>
                    <filter string="Land Compatible" name="land_compatible" domain="[('land_compatible', '=', True)]"/>
                    <separator/>
                    <filter string="Hazmat Approved" name="hazmat" domain="[('hazmat_approved', '=', True)]"/>
                    <filter string="Food Grade" name="food_grade" domain="[('food_grade', '=', True)]"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Type" name="group_type" context="{'group_by': 'container_type'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Is Container" name="group_is_container" context="{'group_by': 'is_container'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Container Action -->
        <record id="action_freight_container" model="ir.actions.act_window">
            <field name="name">Containers/Packages</field>
            <field name="res_model">freight.container</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first container or package!
                </p>
                <p>
                    Configure containers and packages that will be used in your freight operations.
                    Define dimensions, capacity, and transport mode compatibility.
                </p>
            </field>
        </record>

    </data>
</odoo>
