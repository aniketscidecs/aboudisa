<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Incoterm list View -->
        <record id="view_freight_incoterm_list" model="ir.ui.view">
            <field name="name">freight.incoterm.list</field>
            <field name="model">freight.incoterm</field>
            <field name="arch" type="xml">
                <list string="Incoterms" default_order="code">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="incoterm_group"/>
                    <field name="transport_mode"/>
                    <field name="year_version"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- Incoterm Form View -->
        <record id="view_freight_incoterm_form" model="ir.ui.view">
            <field name="name">freight.incoterm.form</field>
            <field name="model">freight.incoterm</field>
            <field name="arch" type="xml">
                <form string="Incoterm">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="code" placeholder="Incoterm Code"/>
                            </h1>
                            <h2>
                                <field name="name" placeholder="Incoterm Description"/>
                            </h2>
                        </div>
                        <group>
                            <group name="basic_info" string="Basic Information">
                                <field name="incoterm_group"/>
                                <field name="transport_mode"/>
                                <field name="year_version"/>
                            </group>
                            <group name="clearance" string="Clearance Responsibilities">
                                <field name="export_clearance"/>
                                <field name="import_clearance"/>
                                <field name="insurance_required"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Risk &amp; Cost Transfer" name="risk_cost">
                                <group>
                                    <field name="risk_transfer_point" placeholder="Describe where risk transfers from seller to buyer..."/>
                                </group>
                                <group>
                                    <field name="cost_responsibility" placeholder="Describe cost responsibilities..."/>
                                </group>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="notes" placeholder="Additional information about the incoterm..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Incoterm Search View -->
        <record id="view_freight_incoterm_search" model="ir.ui.view">
            <field name="name">freight.incoterm.search</field>
            <field name="model">freight.incoterm</field>
            <field name="arch" type="xml">
                <search string="Search Incoterms">
                    <field name="code" string="Incoterm" filter_domain="['|', ('code', 'ilike', self), ('name', 'ilike', self)]"/>
                    <field name="name"/>
                    <field name="incoterm_group"/>
                    <field name="transport_mode"/>
                    <separator/>
                    <filter string="Group E (Departure)" name="group_e" domain="[('incoterm_group', '=', 'e')]"/>
                    <filter string="Group F (Main Carriage Unpaid)" name="group_f" domain="[('incoterm_group', '=', 'f')]"/>
                    <filter string="Group C (Main Carriage Paid)" name="group_c" domain="[('incoterm_group', '=', 'c')]"/>
                    <filter string="Group D (Arrival)" name="group_d" domain="[('incoterm_group', '=', 'd')]"/>
                    <separator/>
                    <filter string="Any Transport Mode" name="any_transport" domain="[('transport_mode', '=', 'any')]"/>
                    <filter string="Sea Transport Only" name="sea_transport" domain="[('transport_mode', '=', 'sea_inland')]"/>
                    <separator/>
                    <filter string="Insurance Required" name="insurance_required" domain="[('insurance_required', '=', True)]"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Incoterm Group" name="group_incoterm_group" context="{'group_by': 'incoterm_group'}"/>
                        <filter string="Transport Mode" name="group_transport_mode" context="{'group_by': 'transport_mode'}"/>
                        <filter string="Version" name="group_version" context="{'group_by': 'year_version'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Incoterm Action -->
        <record id="action_freight_incoterm" model="ir.actions.act_window">
            <field name="name">Incoterms</field>
            <field name="res_model">freight.incoterm</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first incoterm!
                </p>
                <p>
                    Configure incoterms (International Commercial Terms) that define the responsibilities
                    of buyers and sellers in international trade transactions.
                </p>
            </field>
        </record>

    </data>
</odoo>
