<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vessel list View -->
        <record id="view_freight_vessel_list" model="ir.ui.view">
            <field name="name">freight.vessel.list</field>
            <field name="model">freight.vessel</field>
            <field name="arch" type="xml">
                <list string="Vessels" default_order="name">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="country_id"/>
                    <field name="vessel_type"/>
                    <field name="global_zone"/>
                    <field name="teu_capacity"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- Vessel Form View -->
        <record id="view_freight_vessel_form" model="ir.ui.view">
            <field name="name">freight.vessel.form</field>
            <field name="model">freight.vessel</field>
            <field name="arch" type="xml">
                <form string="Vessel">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Vessel Name"/>
                            </h1>
                            <h2>
                                <field name="code" placeholder="Vessel Code"/>
                            </h2>
                        </div>
                        <group>
                            <group name="basic_info" string="Basic Information">
                                <field name="country_id" options="{'no_create': True}"/>
                                <field name="vessel_type"/>
                                <field name="global_zone"/>
                            </group>
                            <group name="identification" string="Identification">
                                <field name="imo_number"/>
                                <field name="mmsi_number"/>
                                <field name="call_sign"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Capacity" name="capacity">
                                <group>
                                    <group name="tonnage" string="Tonnage">
                                        <field name="gross_tonnage"/>
                                        <field name="net_tonnage"/>
                                        <field name="deadweight"/>
                                    </group>
                                    <group name="container_capacity" string="Container Capacity">
                                        <field name="teu_capacity"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Dimensions" name="dimensions">
                                <group>
                                    <group name="vessel_dimensions" string="Vessel Dimensions">
                                        <field name="length"/>
                                        <field name="beam"/>
                                        <field name="draft"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Operational Details" name="operational">
                                <group>
                                    <group name="ownership" string="Ownership">
                                        <field name="owner_id" options="{'no_create': True}"/>
                                        <field name="operator_id" options="{'no_create': True}"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="notes" placeholder="Additional information about the vessel..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Vessel Search View -->
        <record id="view_freight_vessel_search" model="ir.ui.view">
            <field name="name">freight.vessel.search</field>
            <field name="model">freight.vessel</field>
            <field name="arch" type="xml">
                <search string="Search Vessels">
                    <field name="name" string="Vessel" filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                    <field name="country_id"/>
                    <field name="vessel_type"/>
                    <field name="imo_number"/>
                    <separator/>
                    <filter string="Container Ships" name="container_ships" domain="[('vessel_type', '=', 'container')]"/>
                    <filter string="Bulk Carriers" name="bulk_carriers" domain="[('vessel_type', '=', 'bulk')]"/>
                    <filter string="Tankers" name="tankers" domain="[('vessel_type', '=', 'tanker')]"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Country" name="group_country" context="{'group_by': 'country_id'}"/>
                        <filter string="Vessel Type" name="group_type" context="{'group_by': 'vessel_type'}"/>
                        <filter string="Global Zone" name="group_zone" context="{'group_by': 'global_zone'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vessel Action -->
        <record id="action_freight_vessel" model="ir.actions.act_window">
            <field name="name">Vessels</field>
            <field name="res_model">freight.vessel</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first vessel!
                </p>
                <p>
                    Configure vessels that will be used in your ocean freight operations.
                    Track vessel details, capacity, and operational information.
                </p>
            </field>
        </record>

    </data>
</odoo>
