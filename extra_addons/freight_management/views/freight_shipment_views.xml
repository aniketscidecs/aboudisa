<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Shipment List View -->
    <record id="view_freight_shipment_list" model="ir.ui.view">
        <field name="name">freight.shipment.list</field>
        <field name="model">freight.shipment</field>
        <field name="arch" type="xml">
            <list string="Shipments" default_order="create_date desc">
                <field name="reference"/>
                <field name="customer_id"/>
                <field name="origin_port_id"/>
                <field name="destination_port_id"/>
                <field name="transport_mode"/>
                <field name="direction"/>
                <field name="service_type"/>
                <field name="state" decoration-info="state in ('draft', 'quotation')" 
                       decoration-warning="state in ('booking', 'documentation')"
                       decoration-success="state in ('delivery', 'paid')"
                       decoration-danger="state == 'cancelled'"
                       widget="badge"/>
                <field name="booking_date"/>
                <field name="total_sell_cost" widget="monetary"/>
                <field name="profit_margin" widget="monetary"/>
            </list>
        </field>
    </record>

    <!-- Shipment Form View -->
    <record id="view_freight_shipment_form" model="ir.ui.view">
        <field name="name">freight.shipment.form</field>
        <field name="model">freight.shipment</field>
        <field name="arch" type="xml">
            <form string="Shipment">
                <header>
                    <button name="action_confirm_booking" string="Confirm Booking" 
                            type="object" class="oe_highlight" 
                            invisible="state != 'draft'"/>
                    <button name="action_prepare_documentation" string="Prepare Documentation" 
                            type="object" class="oe_highlight" 
                            invisible="state != 'booking'"/>
                    <button name="action_departure" string="Mark Departed" 
                            type="object" class="oe_highlight" 
                            invisible="state != 'documentation'"/>
                    <button name="action_in_transit" string="In Transit" 
                            type="object" 
                            invisible="state != 'departure'"/>
                    <button name="action_arrival" string="Mark Arrived" 
                            type="object" class="oe_highlight" 
                            invisible="state != 'in_transit'"/>
                    <button name="action_delivery" string="Mark Delivered" 
                            type="object" class="oe_highlight" 
                            invisible="state != 'arrival'"/>
                    <button name="action_cancel" string="Cancel" 
                            type="object" 
                            invisible="state in ('delivery', 'invoiced', 'paid', 'cancelled')"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" 
                            type="object" 
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,booking,documentation,departure,in_transit,arrival,delivery"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="customer_info" string="Customer Information">
                            <field name="customer_id" required="1"/>
                            <field name="shipper_id"/>
                            <field name="consignee_id"/>
                            <field name="notify_party_id"/>
                        </group>
                        <group name="route_info" string="Route Information">
                            <field name="origin_port_id" required="1"/>
                            <field name="destination_port_id" required="1"/>
                            <field name="transport_mode" required="1"/>
                            <field name="direction" required="1"/>
                            <field name="service_type"/>
                            <field name="incoterm_id"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Cargo Details" name="cargo">
                            <group>
                                <group name="cargo_info" string="Cargo Information">
                                    <field name="cargo_description" required="1"/>
                                    <field name="total_weight"/>
                                    <field name="total_volume"/>
                                    <field name="number_of_packages"/>
                                </group>
                                <group name="carrier_info" string="Carrier Information">
                                    <field name="airline_id" invisible="transport_mode != 'air'"/>
                                    <field name="vessel_id" invisible="transport_mode != 'ocean'"/>
                                    <field name="voyage_flight_number"/>
                                </group>
                            </group>
                            <field name="container_ids" widget="many2many_tags"/>
                        </page>
                        
                        <page string="Schedule" name="schedule">
                            <group>
                                <group name="dates" string="Important Dates">
                                    <field name="booking_date"/>
                                    <field name="estimated_departure"/>
                                    <field name="actual_departure"/>
                                    <field name="estimated_arrival"/>
                                    <field name="actual_arrival"/>
                                    <field name="delivery_date"/>
                                </group>
                                <group name="computed" string="Computed Information">
                                    <field name="days_in_transit"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Cost Management" name="costs">
                            <field name="cost_line_ids">
                                <list editable="bottom">
                                    <field name="cost_type"/>
                                    <field name="cost_category"/>
                                    <field name="description"/>
                                    <field name="amount" widget="monetary"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="partner_id" invisible="cost_type != 'buy'"/>
                                    <field name="invoice_line_id"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="currency_id" invisible="1"/>
                                <field name="total_buy_cost" widget="monetary"/>
                                <field name="total_sell_cost" widget="monetary"/>
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="profit_margin"/>
                                </div>
                                <field name="profit_margin" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"/>
                            </group>
                        </page>
                        
                        <page string="Notes" name="notes">
                            <group>
                                <field name="special_instructions" placeholder="Special handling instructions for this shipment..."/>
                                <field name="internal_notes" placeholder="Internal notes and comments..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Shipment Kanban View -->
    <record id="view_freight_shipment_kanban" model="ir.ui.view">
        <field name="name">freight.shipment.kanban</field>
        <field name="model">freight.shipment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="reference"/>
                <field name="customer_id"/>
                <field name="origin_port_id"/>
                <field name="destination_port_id"/>
                <field name="transport_mode"/>
                <field name="state"/>
                <field name="total_sell_cost"/>
                <field name="profit_margin"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="reference"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span class="badge badge-pill" t-att-class="record.transport_mode.raw_value === 'air' ? 'badge-info' : record.transport_mode.raw_value === 'ocean' ? 'badge-primary' : 'badge-secondary'">
                                            <field name="transport_mode"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="customer_id"/>
                                    <br/>
                                    <i class="fa fa-arrow-right"/> <field name="origin_port_id"/> â†’ <field name="destination_port_id"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="total_sell_cost" widget="monetary"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="profit_margin" widget="monetary" class="text-success"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Shipment Search View -->
    <record id="view_freight_shipment_search" model="ir.ui.view">
        <field name="name">freight.shipment.search</field>
        <field name="model">freight.shipment</field>
        <field name="arch" type="xml">
            <search string="Search Shipments">
                <field name="reference"/>
                <field name="customer_id"/>
                <field name="origin_port_id"/>
                <field name="destination_port_id"/>
                <field name="cargo_description"/>
                <separator/>
                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="filter_in_progress" domain="[('state', 'in', ['booking', 'documentation', 'departure', 'in_transit'])]"/>
                <filter string="Delivered" name="filter_delivered" domain="[('state', '=', 'delivery')]"/>
                <filter string="Cancelled" name="filter_cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Air Freight" name="filter_air" domain="[('transport_mode', '=', 'air')]"/>
                <filter string="Ocean Freight" name="filter_ocean" domain="[('transport_mode', '=', 'ocean')]"/>
                <filter string="Land Freight" name="filter_land" domain="[('transport_mode', '=', 'land')]"/>
                <separator/>
                <filter string="This Month" name="filter_this_month" domain="[('booking_date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Customer" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Transport Mode" name="group_transport" context="{'group_by': 'transport_mode'}"/>
                    <filter string="Origin Port" name="group_origin" context="{'group_by': 'origin_port_id'}"/>
                    <filter string="Booking Date" name="group_booking_date" context="{'group_by': 'booking_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Shipment Action -->
    <record id="action_freight_shipment" model="ir.actions.act_window">
        <field name="name">Shipments</field>
        <field name="res_model">freight.shipment</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_filter_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first shipment
            </p>
            <p>
                Track and manage your freight shipments from booking to delivery.
                Support for air, ocean, and land transport modes with comprehensive
                cost management and workflow tracking.
            </p>
        </field>
    </record>

</odoo>
